<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.rbac.dao.TResourceDao">

    <resultMap type="com.example.rbac.entity.TResource" id="TResourceMap">
        <result property="rId" column="r_id" jdbcType="INTEGER"/>
        <result property="rAddress" column="r_address" jdbcType="VARCHAR"/>
        <result property="rDate" column="r_date" jdbcType="TIMESTAMP"/>
        <result property="rUploader" column="r_uploader" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TResourceMap">
        select
          r_id, r_address, r_date, r_uploader
        from t_resource
        where r_id = #{rId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TResourceMap">
        select
          r_id, r_address, r_date, r_uploader
        from t_resource
        <where>
            <if test="rId != null">
                and r_id = #{rId}
            </if>
            <if test="rAddress != null and rAddress != ''">
                and r_address = #{rAddress}
            </if>
            <if test="rDate != null">
                and r_date = #{rDate}
            </if>
            <if test="rUploader != null and rUploader != ''">
                and r_uploader = #{rUploader}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <select id="getAllRes" resultMap="TResourceMap">
            select
                *
            from t_resource
    </select>
    <select id="findRes" resultMap="TResourceMap">
            select
                *
            from t_resource where r_uploader = #{account}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from t_resource
        <where>
            <if test="rId != null">
                and r_id = #{rId}
            </if>
            <if test="rAddress != null and rAddress != ''">
                and r_address = #{rAddress}
            </if>
            <if test="rDate != null">
                and r_date = #{rDate}
            </if>
            <if test="rUploader != null and rUploader != ''">
                and r_uploader = #{rUploader}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="rId" useGeneratedKeys="true">
        insert into t_resource(r_address, r_date, r_uploader)
        values (#{rAddress}, #{rDate}, #{rUploader})
    </insert>
    <insert id="addResource" keyProperty="rId" useGeneratedKeys="false">
        insert into t_resource(r_address,r_uploader)
        values (#{address},#{account})
    </insert>

    <insert id="insertBatch" keyProperty="rId" useGeneratedKeys="true">
        insert into t_resource(r_address, r_date, r_uploader)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.rAddress}, #{entity.rDate}, #{entity.rUploader})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="rId" useGeneratedKeys="true">
        insert into t_resource(r_address, r_date, r_uploader)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.rAddress}, #{entity.rDate}, #{entity.rUploader})
        </foreach>
        on duplicate key update
        r_address = values(r_address),
        r_date = values(r_date),
        r_uploader = values(r_uploader)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update t_resource
        <set>
            <if test="rAddress != null and rAddress != ''">
                r_address = #{rAddress},
            </if>
            <if test="rDate != null">
                r_date = #{rDate},
            </if>
            <if test="rUploader != null and rUploader != ''">
                r_uploader = #{rUploader},
            </if>
        </set>
        where r_id = #{rId}
    </update>

    <update id="updateInfoById">
        update t_resource
        <set>
            r_address = #{address}
        </set>
        where r_id=#{id};
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from t_resource where r_id = #{rId}
    </delete>

</mapper>

