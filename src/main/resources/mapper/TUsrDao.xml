<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.rbac.dao.TUsrDao">

    <resultMap type="com.example.rbac.entity.TUsr" id="TUsrMap">
        <result property="usrId" column="usr_id" jdbcType="INTEGER"/>
        <result property="usrAccount" column="usr_account" jdbcType="VARCHAR"/>
        <result property="usrPasswd" column="usr_passwd" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TUsrMap">
        select
          usr_id, usr_account, usr_passwd
        from t_usr
        where usr_id = #{usrId}
    </select>
    <select id="entryLogInfo" resultType="java.lang.Integer">
        select
            *
        from t_usr
        where usr_account = #{account} and usr_passwd = #{passwd}
    </select>

    <select id="checkLoginInfo" resultType="java.lang.Integer">
        select
            usr_id
        from t_usr
        where usr_account = #{account} and usr_passwd = #{passwd}
    </select>
    <select id="getAccById" resultType="java.lang.String">
        select
            usr_account
        from t_usr
        where usr_id = #{id}
    </select>

    <select id="getAllInfo" resultMap="TUsrMap">
        select
            *
        from t_usr
    </select>

    <select id="checkAccount" resultType="java.lang.Integer">
        select
            usr_id
        from t_usr
        where usr_account=#{account}
    </select>

    <select id="findUsr" resultMap="TUsrMap">
        select
            *
        from t_usr
        where usr_account=#{account}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TUsrMap">
        select
          usr_id, usr_account, usr_passwd
        from t_usr
        <where>
            <if test="usrId != null">
                and usr_id = #{usrId}
            </if>
            <if test="usrAccount != null and usrAccount != ''">
                and usr_account = #{usrAccount}
            </if>
            <if test="usrPasswd != null and usrPasswd != ''">
                and usr_passwd = #{usrPasswd}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from t_usr
        <where>
            <if test="usrId != null">
                and usr_id = #{usrId}
            </if>
            <if test="usrAccount != null and usrAccount != ''">
                and usr_account = #{usrAccount}
            </if>
            <if test="usrPasswd != null and usrPasswd != ''">
                and usr_passwd = #{usrPasswd}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="usrId" useGeneratedKeys="true">
        insert into t_usr(usr_passwd)
        values (#{usrPasswd})
    </insert>

    <insert id="insertBatch" keyProperty="usrId" useGeneratedKeys="true">
        insert into t_usr(usr_passwd)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.usrPasswd})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="usrId" useGeneratedKeys="true">
        insert into t_usr(usr_passwd)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.usrPasswd})
        </foreach>
        on duplicate key update
        usr_passwd = values(usr_passwd)
    </insert>

    <insert id="addAccount" keyProperty="usrId" useGeneratedKeys="false">
        insert into t_usr(usr_account,usr_passwd)
        values (#{account},#{passwd})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update t_usr
        <set>
            <if test="usrPasswd != null and usrPasswd != ''">
                usr_passwd = #{usrPasswd},
            </if>
        </set>
        where usr_id = #{usrId}
    </update>

    <update id="updateById">
        update t_usr
        <set>
            <if test="passwd != null and passwd != ''">
                usr_passwd = #{passwd},
            </if>
        </set>
        where usr_id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from t_usr where usr_id = #{usrId}
    </delete>


</mapper>

