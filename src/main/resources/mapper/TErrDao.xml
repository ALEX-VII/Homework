<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.rbac.dao.TErrDao">

    <resultMap type="com.example.rbac.entity.TErr" id="TErrMap">
        <result property="eId" column="e_id" jdbcType="INTEGER"/>
        <result property="eEid" column="e_eId" jdbcType="INTEGER"/>
        <result property="eDate" column="e_date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TErrMap">
        select
          e_id, e_eId, e_date
        from t_err
        where e_id = #{eId}
    </select>
    <select id="getAllInfo" resultMap="TErrMap">
        select
            *
        from t_err
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TErrMap">
        select
          e_id, e_eId, e_date
        from t_err
        <where>
            <if test="eId != null">
                and e_id = #{eId}
            </if>
            <if test="eEid != null">
                and e_eId = #{eEid}
            </if>
            <if test="eDate != null">
                and e_date = #{eDate}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from t_err
        <where>
            <if test="eId != null">
                and e_id = #{eId}
            </if>
            <if test="eEid != null">
                and e_eId = #{eEid}
            </if>
            <if test="eDate != null">
                and e_date = #{eDate}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="eId" useGeneratedKeys="true">
        insert into t_err(e_eId, e_date)
        values (#{eEid}, #{eDate})
    </insert>
    <insert id="addRecord" keyProperty="eId" useGeneratedKeys="false">
        insert into t_err(e_eId)
        values (#{eid})
    </insert>

    <insert id="insertBatch" keyProperty="eId" useGeneratedKeys="true">
        insert into t_err(e_eId, e_date)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.eEid}, #{entity.eDate})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="eId" useGeneratedKeys="true">
        insert into t_err(e_eId, e_date)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.eEid}, #{entity.eDate})
        </foreach>
        on duplicate key update
        e_eId = values(e_eId),
        e_date = values(e_date)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update t_err
        <set>
            <if test="eEid != null">
                e_eId = #{eEid},
            </if>
            <if test="eDate != null">
                e_date = #{eDate},
            </if>
        </set>
        where e_id = #{eId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from t_err where e_id = #{eId}
    </delete>

</mapper>

