<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.rbac.dao.TResMsgboxDao">

    <resultMap type="com.example.rbac.entity.TResMsgbox" id="TResMsgboxMap">
        <result property="rmbId" column="rmb_id" jdbcType="INTEGER"/>
        <result property="rmbErr" column="rmb_err" jdbcType="INTEGER"/>
        <result property="rmbDetail" column="rmb_detail" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TResMsgboxMap">
        select
          rmb_id, rmb_err, rmb_detail
        from t_res_msgbox
        where rmb_id = #{rmbId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TResMsgboxMap">
        select
          rmb_id, rmb_err, rmb_detail
        from t_res_msgbox
        <where>
            <if test="rmbId != null">
                and rmb_id = #{rmbId}
            </if>
            <if test="rmbErr != null">
                and rmb_err = #{rmbErr}
            </if>
            <if test="rmbDetail != null and rmbDetail != ''">
                and rmb_detail = #{rmbDetail}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>
    <select id="getDetailById" resultType="java.lang.String">
        select
            rmb_detail
        from t_res_msgbox
        where rmb_err = #{id}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from t_res_msgbox
        <where>
            <if test="rmbId != null">
                and rmb_id = #{rmbId}
            </if>
            <if test="rmbErr != null">
                and rmb_err = #{rmbErr}
            </if>
            <if test="rmbDetail != null and rmbDetail != ''">
                and rmb_detail = #{rmbDetail}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="rmbId" useGeneratedKeys="true">
        insert into t_res_msgbox(rmb_err, rmb_detail)
        values (#{rmbErr}, #{rmbDetail})
    </insert>

    <insert id="insertBatch" keyProperty="rmbId" useGeneratedKeys="true">
        insert into t_res_msgbox(rmb_err, rmb_detail)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.rmbErr}, #{entity.rmbDetail})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="rmbId" useGeneratedKeys="true">
        insert into t_res_msgbox(rmb_err, rmb_detail)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.rmbErr}, #{entity.rmbDetail})
        </foreach>
        on duplicate key update
        rmb_err = values(rmb_err),
        rmb_detail = values(rmb_detail)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update t_res_msgbox
        <set>
            <if test="rmbErr != null">
                rmb_err = #{rmbErr},
            </if>
            <if test="rmbDetail != null and rmbDetail != ''">
                rmb_detail = #{rmbDetail},
            </if>
        </set>
        where rmb_id = #{rmbId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from t_res_msgbox where rmb_id = #{rmbId}
    </delete>

</mapper>

