<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.rbac.dao.TUsrOpHisDao">

    <resultMap type="com.example.rbac.entity.TUsrOpHis" id="TUsrOpHisMap">
        <result property="uohId" column="uoh_id" jdbcType="INTEGER"/>
        <result property="uohUsrAcc" column="uoh_usr_acc" jdbcType="VARCHAR"/>
        <result property="uohDate" column="uoh_date" jdbcType="TIMESTAMP"/>
        <result property="uohOp" column="uoh_op" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TUsrOpHisMap">
        select
          uoh_id, uoh_usr_acc, uoh_date, uoh_op
        from t_usr_op_his
        where uoh_id = #{uohId}
    </select>
    <select id="getAllHis" resultMap="TUsrOpHisMap">
            select
                *
            from t_usr_op_his
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TUsrOpHisMap">
        select
          uoh_id, uoh_usr_acc, uoh_date, uoh_op
        from t_usr_op_his
        <where>
            <if test="uohId != null">
                and uoh_id = #{uohId}
            </if>
            <if test="uohUsrAcc != null and uohUsrAcc != ''">
                and uoh_usr_acc = #{uohUsrAcc}
            </if>
            <if test="uohDate != null">
                and uoh_date = #{uohDate}
            </if>
            <if test="uohOp != null and uohOp != ''">
                and uoh_op = #{uohOp}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from t_usr_op_his
        <where>
            <if test="uohId != null">
                and uoh_id = #{uohId}
            </if>
            <if test="uohUsrAcc != null and uohUsrAcc != ''">
                and uoh_usr_acc = #{uohUsrAcc}
            </if>
            <if test="uohDate != null">
                and uoh_date = #{uohDate}
            </if>
            <if test="uohOp != null and uohOp != ''">
                and uoh_op = #{uohOp}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="uohId" useGeneratedKeys="true">
        insert into t_usr_op_his(uoh_usr_acc, uoh_date, uoh_op)
        values (#{uohUsrAcc}, #{uohDate}, #{uohOp})
    </insert>

    <insert id="addHis" keyProperty="uohId" useGeneratedKeys="false">
        insert into t_usr_op_his(uoh_usr_acc,uoh_op)
        values (#{account},#{operation})
    </insert>

    <insert id="insertBatch" keyProperty="uohId" useGeneratedKeys="true">
        insert into t_usr_op_his(uoh_usr_acc, uoh_date, uoh_op)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.uohUsrAcc}, #{entity.uohDate}, #{entity.uohOp})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="uohId" useGeneratedKeys="true">
        insert into t_usr_op_his(uoh_usr_acc, uoh_date, uoh_op)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.uohUsrAcc}, #{entity.uohDate}, #{entity.uohOp})
        </foreach>
        on duplicate key update
        uoh_usr_acc = values(uoh_usr_acc),
        uoh_date = values(uoh_date),
        uoh_op = values(uoh_op)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update t_usr_op_his
        <set>
            <if test="uohUsrAcc != null and uohUsrAcc != ''">
                uoh_usr_acc = #{uohUsrAcc},
            </if>
            <if test="uohDate != null">
                uoh_date = #{uohDate},
            </if>
            <if test="uohOp != null and uohOp != ''">
                uoh_op = #{uohOp},
            </if>
        </set>
        where uoh_id = #{uohId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from t_usr_op_his where uoh_id = #{uohId}
    </delete>

</mapper>

